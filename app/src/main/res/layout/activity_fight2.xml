<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enemyFace"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/invoker_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:id="@+id/enemyHPText"
            android:layout_below="@+id/enemyFace"
            android:layout_alignStart="@+id/enemyFace"
            android:textSize="30dp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:id="@+id/enemyHP"
            android:layout_below="@+id/enemyFace"
            android:layout_toEndOf="@+id/enemyHPText"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selfFace"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/invoker_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:id="@+id/selfHPText"
            android:layout_below="@+id/selfFace"
            android:layout_alignLeft="@+id/selfFace"
            android:textSize="30dp"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:id="@+id/selfHP"
            android:layout_below="@+id/selfFace"
            android:layout_toEndOf="@+id/selfHPText"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pass"
            android:id="@+id/buttonPass"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/buttonClear"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/buttonPass" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:id="@+id/buttonAttack"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/buttonPass" />

    </RelativeLayout>
    <![CDATA[

    * 0.5
        android:layout_gravity="center_horizontal">]]>
</LinearLayout>